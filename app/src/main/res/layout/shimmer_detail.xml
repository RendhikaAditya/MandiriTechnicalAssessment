<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="#59000000" />

        <ImageView
            android:id="@+id/imgBaner"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@color/biru_pudar"
            android:translationZ="-1dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/cardPoster"
            app:cardBackgroundColor="@color/biru_dark"
            app:cardElevation="0dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/cardPoster"
            android:layout_marginLeft="16dp"
            android:layout_below="@id/imgBaner"
            android:layout_marginTop="16dp">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="24dp"
                android:background="@color/biru_pudar"/>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="24dp"
                android:background="@color/biru_pudar"
                android:lineSpacingExtra="5dp"
                android:layout_marginTop="5dp"/>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:background="@color/biru_pudar" />
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="290dp"
        android:layout_height="24dp"
        android:background="@color/biru_pudar"/>

    <RelativeLayout
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/biru_pudar"
        android:layout_marginRight="16dp"
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:layout_marginLeft="16dp"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:layout_marginTop="5dp"
        android:background="@color/biru_pudar" />



</LinearLayout>